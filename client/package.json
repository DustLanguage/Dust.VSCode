{
  "name": "lsp-sample",
  "description": "VSCode part of a language server",
  "author": "Microsoft Corporation",
  "license": "MIT",
  "version": "0.0.1",
  "publisher": "vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vscode-extension-samples"
  },
  "engines": {
    "vscode": "^1.13.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onLanguage:dust",
    "onDebug"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "dust",
        "aliases": [
          "Dust"
        ],
        "extensions": [
          ".ds"
        ],
        "configuration": "./dust.configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dust",
        "scopeName": "source.dust",
        "path": "./dust.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "lspSample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "lspSample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VSCode and the language server."
        }
      }
    },
    "debuggers": [
      {
        "type": "dust",
        "label": "Dust Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "filePath"
            ],
            "properties": {
              "filePath": {
                "type": "string",
                "description": "Absolute path to a Dust source file.",
                "default": "${workspaceFolder}/${command:AskForFilePath}"
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "dust",
            "request": "launch",
            "name": "Ask for file path",
            "program": "${workspaceFolder}/${command:AskForFilePath}",
            "stopOnEntry": true
          }
        ],
        "configurationSnippets": [
          {
            "label": "Dust Debug: Run file",
            "description": "Configuration for debugging Dust source files.",
            "body": {
              "type": "dust",
              "request": "launch",
              "name": "Ask for file path",
              "program": "^\"\\${workspaceFolder}/\\${command:AskForProgramName}\"",
              "stopOnEntry": true
            }
          }
        ],
        "variables": {
          "AskForProgramName": "extension.dust-debug.getFilePath"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "update-vscode": "node ./node_modules/vscode/bin/install",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "dependencies": {
    "vscode": "^1.1.13",
    "vscode-languageclient": "^3.4.2"
  }
}
